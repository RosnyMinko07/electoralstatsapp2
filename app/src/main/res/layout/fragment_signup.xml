<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Image -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/im"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"/>

        <!-- Titre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Résultats des élections"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="24dp"
            android:textColor="#000"/>

        <!-- Sous-titre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rejoignez-nous pour gérer les résultats"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="#666"/>

        <!-- Nom complet -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom complet *"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/et_full_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="John Doe"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"/>

        <!-- Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email *"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="user@example.com"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:textColor="#000"/>

        <!-- Mot de passe -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mot de passe *"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="************"
            android:inputType="textPassword"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"/>

        <!-- Bouton S'inscrire -->
        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="S'inscrire"
            android:layout_marginTop="24dp"
            android:backgroundTint="#7A98A9"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <!-- Lien Se connecter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Déjà membre ?"
                android:textColor="#888"/>

            <TextView
                android:id="@+id/tv_go_to_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Se connecter"
                android:textStyle="bold"
                android:textColor="#000"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_signup_loading"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:visibility="gone"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"/>
    </LinearLayout>
</ScrollView>