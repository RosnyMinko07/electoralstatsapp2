<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@android:color/white"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.FragmentNotifications"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_back_notifications"
                android:src="@drawable/ic_arrow_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:text="Election"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

        <!-- Liste des notifications/messages -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Notification 1 -->
                <LinearLayout
                    android:id="@+id/notification_1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:backgroundTint="#67859A"
                    android:clipToPadding="false"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_margin="0dp"
                    android:background="@drawable/rounded_top_left_right"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:src="@drawable/ic_warning"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        app:tint="@android:color/white" />

                    <TextView
                        android:text="IMPORTANT: validation des Résultats"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:src="@drawable/ic_arrow_right"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="@android:color/white" />
                </LinearLayout>

                <!-- Notification 2 -->
                <LinearLayout
                    android:id="@+id/notification_2"
                    android:orientation="horizontal"
                    android:background="#E5E5E5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:src="@drawable/ic_people"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        app:tint="#333333" />

                    <TextView
                        android:text="Rejoignez l'équipe d'observation des résultats"
                        android:textColor="#333333"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:src="@drawable/ic_arrow_right"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="#333333" />
                </LinearLayout>

                <!-- Notification 3 -->
                <LinearLayout
                    android:id="@+id/notification_3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/rounded_top_left_right"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:src="@drawable/ic_calendar"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        app:tint="@android:color/white" />

                    <TextView
                        android:text="Examiner les données électorales soumises."
                        android:textColor="@android:color/white"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:src="@drawable/ic_arrow_right"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="@android:color/white" />
                </LinearLayout>

                <!-- Notifications simples -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="#D6ECFB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/check"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        app:tint="#388E3C" />

                    <TextView
                        android:text="Votre inscription est confirmée."
                        android:textColor="#333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:background="#D6ECFB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/ic_announcement"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        app:tint="#333333" />
                    <TextView
                        android:text="Nouvelles mises à jour sur les élections"
                        android:textColor="#333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:background="#D6ECFB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/check"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        app:tint="#388E3C" />
                    <TextView
                        android:text="Vos commentaires ont été enregistrés."
                        android:textColor="#333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:background="#D6ECFB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/check"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        app:tint="#388E3C" />
                    <TextView
                        android:text="Vous avez des tâches en attente de révision."
                        android:textColor="#333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:background="#D6ECFB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/ic_announcement"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        app:tint="#333333" />
                    <TextView
                        android:text="Abonnez-vous pour recevoir des mises à jour."
                        android:textColor="#333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:background="#D6ECFB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/ic_announcement"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        app:tint="#333333" />
                    <TextView
                        android:text="Annonce des résultats des élections demain."
                        android:textColor="#333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Barre de navigation en bas -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iv_home_notifications"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_home" />

            <ImageView
                android:id="@+id/iv_mail_notifications"
                android:src="@drawable/ic_mail"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"/>
            <ImageView
                android:id="@+id/iv_calendar_notifications"
                android:src="@drawable/ic_calendar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"/>
            <ImageView
                android:id="@+id/iv_chat_notifications"
                android:src="@drawable/ic_chat"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"/>
            <ImageView
                android:id="@+id/iv_settings_notifications"
                android:src="@drawable/ic_settings"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>
    </LinearLayout>