<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saisie des Résultats"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Élection" style="@style/TextAppearance.AppCompat.Caption"/>
        <Spinner android:id="@+id/spinner_election" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginBottom="8dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Candidat" style="@style/TextAppearance.AppCompat.Caption"/>
        <Spinner android:id="@+id/spinner_candidat" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginBottom="8dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Circonscription" style="@style/TextAppearance.AppCompat.Caption"/>
        <Spinner android:id="@+id/spinner_circonscription" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginBottom="8dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Centre de Vote" style="@style/TextAppearance.AppCompat.Caption"/>
        <Spinner android:id="@+id/spinner_centre_vote" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginBottom="8dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bureau de Vote" style="@style/TextAppearance.AppCompat.Caption"/>
        <Spinner android:id="@+id/spinner_bureau_vote" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/et_nombre_voix"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nombre de voix"
            android:inputType="number"/>

        <Button
            android:id="@+id/btn_save_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Enregistrer le résultat"/>

    </LinearLayout>
</ScrollView>