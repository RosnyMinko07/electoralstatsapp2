<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".fragments.Fragment_liste_bureau">

        <!-- Header -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="0dp"
            android:layout_marginBottom="12dp">

            <!-- Partie gauche : icône fr -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical">
                <ImageView
                    android:src="@drawable/fr"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
            </LinearLayout>

            <!-- Partie centrale : communauté + texte -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:src="@drawable/communaute"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ElectoManage"
                    android:textColor="#222"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Partie droite vide pour équilibrer -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:text="Listes des Bureaux de votes"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"/>

        <!-- Liste des bureaux -->
        <LinearLayout
            android:id="@+id/liste_bureau_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp">

            <!-- Bureau 1 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="3 ème A"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#8CA0B6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="AB-123"
                        android:textSize="13sp"
                        android:textColor="#8CA0B6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <Button
                    android:text="Afficher"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_btn_blue"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:text="Supprimer"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_btn_white"
                    android:textColor="#7A97B8"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- Bureau 2 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="ENSP-A"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#8CA0B6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="PA-12"
                        android:textSize="13sp"
                        android:textColor="#8CA0B6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <Button
                    android:text="Afficher"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_btn_blue"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:text="Supprimer"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_btn_white"
                    android:textColor="#7A97B8"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- Bureau 3 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="St-Michel"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#8CA0B6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="MA-77"
                        android:textSize="13sp"
                        android:textColor="#8CA0B6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <Button
                    android:text="Afficher"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_btn_blue"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:text="Supprimer"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_btn_white"
                    android:textColor="#7A97B8"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- Ajouter un utilisateur -->
            <Button
                android:text="Ajouter un utilisateur"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_btn_blue"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <!-- Barre de navigation toujours en bas -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:layout_marginTop="236dp"
            android:background="#FFF">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:src="@drawable/accueil"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:src="@drawable/email"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:src="@drawable/calendrier"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:src="@drawable/framess"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:src="@drawable/parametres"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
